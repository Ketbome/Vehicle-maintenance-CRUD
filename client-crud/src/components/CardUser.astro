---
import type { Vehiculo } from "../types";
interface UserCardProps {
  userName: string;
  lastName: string;
  userCars: Vehiculo[];
}

// Obtener las props con tipos
const { userName, lastName, userCars } = Astro.props as UserCardProps;

---

<div class="card bg-gray-700 hover:bg-gray-600 transition-colors duration-300 p-4 rounded-lg shadow-lg w-3/4 :w-1/2">
    <h3 class="text-xl text-white mt-2 text-center">{userName} {lastName}</h3>
    <p class="text-gray-300 text-center mb-4">Tiene {userCars.length} Autos</p>
  
    <div class="autos bg-gray-800 p-3 rounded-md">
      <h4 class="text-white text-lg mb-2">Autos de {userName}:</h4>
      <ul class=" list-inside text-gray-300">
        {userCars.map((car) => (
          <li class="flex flex-row items-center gap-3"><img src={`/public/${car.marca}.svg`} alt={car.marca} class="w-10" /> {car.marca} - {car.modelo} - {car.anio}</li>
        ))}
      </ul>
    </div>
</div>
